<layout>
    <news_index_index>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/news/category.js</name></action>
        </reference>
        <reference name="left">
            <block type="news/categories" name="news.categories" as="categories" template="news/categories.phtml"/>
        </reference>
        <reference name="content">
                <block type="news/articles" name="news.articles" as="articles" template="news/articles.phtml">
                    <block type="page/html_pager" name="questions.pager" as="pager">
                        <action method="setAvailableLimit">
                            <limits helper="news/getPageLimits"/>
                        </action>
                        <action method="setData">
                            <key helper="news/getShowAmounts"/>
                        </action>
                        <action method="setCollection">
                            <collection helper="news/getArticleCollection"/>
                        </action>
                    </block>
                </block>
        </reference>
    </news_index_index>
</layout>