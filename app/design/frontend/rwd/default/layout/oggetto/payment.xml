<layout>
    <oggetto_payment_redirect_index>
        <reference name="content">
            <block type="oggetto_payment/redirect" name="redirect_form" template="oggetto/payment/redirect.phtml"/>
        </reference>
    </oggetto_payment_redirect_index>

    <oggetto_payment_redirect_fail>
        <reference name="content">
            <block type="core/template" name="oggetto_payment_fail" template="oggetto/payment/fail.phtml"/>
        </reference>
    </oggetto_payment_redirect_fail>

    <oggetto_payment_redirect_success>
        <reference name="content">
            <block type="core/template" name="oggetto_payment_success" template="oggetto/payment/success.phtml"/>
        </reference>
    </oggetto_payment_redirect_success>
</layout>