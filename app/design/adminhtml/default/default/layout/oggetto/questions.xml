    <adminhtml_questions_index>
        <reference name="content">
            <block type="questions/adminhtml_questions" name="questions.grid.container"/>
        </reference>
    </adminhtml_questions_index>
    <adminhtml_questions_grid>
        <block type="questions/adminhtml_questions_grid" name="root"/>
    </adminhtml_questions_grid>
    <adminhtml_questions_edit>
        <update handle="editor"/>
        <reference name="content">
            <block type="questions/adminhtml_edit" name="questions.edit"/>
        </reference>
    </adminhtml_questions_edit>
    <adminhtml_questions_new>
        <update handle="editor"/>
        <reference name="content">
            <block type="questions/adminhtml_edit" name="questions.edit"/>
        </reference>
    </adminhtml_questions_new>
