<config>
    <phpunit>
        <suite>
            <modules>
                <Oggetto_News/>
            </modules>
        </suite>
    </phpunit>
    <modules>
        <Oggetto_News>
            <version>1.0.1</version>
        </Oggetto_News>
    </modules>
    <global>
        <models>
            <news>
                <class>Oggetto_News_Model</class>
                <resourceModel>news_resource</resourceModel>
            </news>
            <news_resource>
                <class>Oggetto_News_Model_Resource</class>
                <entities>
                    <article>
                        <table>articles</table>
                    </article>
                    <category>
                        <table>article_category</table>
                    </category>
                    <article_category_idx>
                        <table>article_category_idx</table>
                    </article_category_idx>
                </entities>
            </news_resource>
        </models>
        <resources>
            <news_setup>
                <setup>
                    <module>Oggetto_News</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </news_setup>
        </resources>
        <helpers>
            <news>
                <class>Oggetto_News_Helper</class>
            </news>
        </helpers>
        <blocks>
            <news>
                <class>Oggetto_News_Block</class>
            </news>
        </blocks>
    </global>
    <frontend>
        <routers>
            <news>
                <use>standard</use>
                <args>
                    <module>Oggetto_News</module>
                    <frontName>news</frontName>
                </args>
            </news>
        </routers>
        <layout>
            <updates>
                <news module="Oggetto_News">
                    <file>oggetto/news.xml</file>
                </news>
            </updates>
        </layout>
        <translate>
            <modules>
                <Oggetto_News>
                    <files>
                        <default>Oggetto_News.csv</default>
                    </files>
                </Oggetto_News>
            </modules>
        </translate>
    </frontend>
</config>