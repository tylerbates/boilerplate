<config>
    <modules>
        <Oggetto_Questions>
            <version>1.0.2</version>
        </Oggetto_Questions>
    </modules>
    <frontend>
        <routers>
            <questions>
                <use>standard</use>
                <args>
                    <module>Oggetto_Questions</module>
                    <frontName>questions</frontName>
                </args>
            </questions>
        </routers>
        <layout>
            <updates>
                <questions module="Oggetto_Questions">
                    <file>oggetto/questions.xml</file>
                </questions>
            </updates>
        </layout>
        <translate>
            <modules>
                <Oggetto_Questions>
                    <files>
                        <default>Oggetto_Questions.csv</default>
                    </files>
                </Oggetto_Questions>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Oggetto_Questions before="Mage_Adminhtml">Oggetto_Questions_Adminhtml</Oggetto_Questions>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <questions module="Oggetto_Questions">
                    <file>oggetto/questions.xml</file>
                </questions>
            </updates>
        </layout>
        <translate>
            <modules>
                <Oggetto_Questions>
                    <files>
                        <default>Oggetto_Questions.csv</default>
                    </files>
                </Oggetto_Questions>
            </modules>
        </translate>
    </adminhtml>
    <global>
        <models>
            <questions>
                <class>Oggetto_Questions_Model</class>
                <resourceModel>questions_resource</resourceModel>
            </questions>
            <questions_resource>
                <class>Oggetto_Questions_Model_Resource</class>
                <entities>
                    <question>
                        <table>questions</table>
                    </question>
                </entities>
            </questions_resource>
        </models>
        <resources>
            <questions_setup>
                <setup>
                    <module>Oggetto_Questions</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </questions_setup>
        </resources>
        <helpers>
            <questions>
                <class>Oggetto_Questions_Helper</class>
            </questions>
        </helpers>
        <blocks>
            <questions>
                <class>Oggetto_Questions_Block</class>
            </questions>
        </blocks>
    </global>
</config>
