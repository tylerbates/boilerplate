<config>
    <modules>
        <Oggetto_Sales>
            <version>1.0.0</version>
        </Oggetto_Sales>
    </modules>
    <global>
        <models>
            <oggetto_sales>
                <class>Oggetto_Sales_Model</class>
            </oggetto_sales>
        </models>
        <helpers>
            <oggetto_sales>
                <class>Oggetto_Sales_Helper</class>
            </oggetto_sales>
        </helpers>
        <events>
            <sales_order_resource_init_virtual_grid_columns>
                <observers>
                    <oggetto_sales>
                        <model>oggetto_sales/observer</model>
                        <method>addColumnsToResource</method>
                    </oggetto_sales>
                </observers>
            </sales_order_resource_init_virtual_grid_columns>
        </events>
        <resources>
            <oggetto_sales_setup>
                <setup>
                    <module>Oggetto_Sales</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
            </oggetto_sales_setup>
        </resources>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <oggetto_sales module="Oggetto_Sales">
                    <file>oggetto/sales.xml</file>
                </oggetto_sales>
            </updates>
        </layout>
        <translate>
            <modules>
                <Oggetto_Sales>
                    <files>
                        <default>Oggetto_Sales.csv</default>
                    </files>
                </Oggetto_Sales>
            </modules>
        </translate>
    </adminhtml>
</config>